{
  "tasks": [
          {
      "label": "Build kernel (make)",
      "type": "shell",
      "command": "make",
      "group": "build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Run qemu-gdb",
      "type": "shell",
      "command": "make qemu-gdb",
      "isBackground": false,
      "presentation": {
        "panel": "dedicated",
        "echo": true,
        "reveal": "always",
        "focus": true
      }
    ,}

    {
      "type": "cppbuild",
      "label": "C/C++: gcc build active file",
      "command": "/usr/bin/gcc",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        // "${workspaceFolder}/xv6-riscv",
         // "-I${workspaceFolder}/xv6-riscv",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}",
        "-lpthread",
        "-I${workspaceFolder}/code_examples/include"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": ["$gcc"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      // "detail": "Task generated by Debugger."
      "detail": "compiler: /usr/bin/gcc"
    },

  ],
  "version": "2.0.0"
}
